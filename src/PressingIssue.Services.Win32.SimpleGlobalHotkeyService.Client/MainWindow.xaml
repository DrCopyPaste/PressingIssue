<Window x:Class="TestClient_SimpleGlobalHotkeyService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestClient_SimpleGlobalHotkeyService"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Text" Name="ToggleModeButton" HorizontalAlignment="Left" Margin="603,10,0,0" VerticalAlignment="Top" Click="Button_Click" RenderTransformOrigin="-0.331,1.663"/>
        <Label Name="ShownKeys"  Content="CurrentPressedKeys" HorizontalAlignment="Left" Margin="158,143,0,0" VerticalAlignment="Top"/>
        <Label Name="CurrentMode"  Content="CurrentMode" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.658,2.38"/>
        <ScrollViewer Margin="0,273,0,0" VerticalAlignment="Top" Width="780" Height="141">
            <TextBlock x:Name="Eventlines" Text="{Binding TextContents}"  HorizontalAlignment="Left"/>
        </ScrollViewer>

    </Grid>
</Window>
